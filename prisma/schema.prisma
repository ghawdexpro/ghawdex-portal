// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  name      String
  role      String     @default("EMPLOYEE")
  department String?
  avatar    String?
  bio       String?
  active    Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([email])
  @@index([role])
}

model CompanyInfo {
  id        String   @id @default(cuid())
  mission   String
  vision    String
  values    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TeamMember {
  id        String   @id @default(cuid())
  name      String
  title     String
  department String
  bio       String?
  photo     String?
  email     String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String
  author    String
  priority  String   @default("normal")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
}

model Policy {
  id        String   @id @default(cuid())
  title     String
  category  String
  content   String
  version   Int      @default(1)
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
}

model Goal {
  id        String   @id @default(cuid())
  title     String
  description String
  period    String   // "quarterly", "yearly", "ongoing"
  department String?
  owner     String?  // User name
  status    String   @default("active")
  progress  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([period])
  @@index([department])
}

model Procedure {
  id        String   @id @default(cuid())
  title     String
  category  String   // "emergency", "problem-solving", "best-practices", "how-to"
  content   String
  priority  String   @default("normal")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
}

model WikiPage {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String
  category  String
  author    String?
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@index([slug])
}

model Tool {
  id        String   @id @default(cuid())
  name      String
  description String
  url       String?
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
}

model CalendarEvent {
  id        String   @id @default(cuid())
  title     String
  description String?
  startDate DateTime
  endDate   DateTime
  type      String   // "project", "deadline", "meeting", "holiday"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([startDate])
}
